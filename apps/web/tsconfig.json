{
  "extends": "@recharge/utilities/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@recharge/ui/*": ["../../packages/ui/src/*"],
      "@recharge/backend": ["../../packages/backend/index.ts"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts",
    "../../packages/ui/src/components/selection.tsx"
  ],
  "exclude": ["node_modules"]
}
