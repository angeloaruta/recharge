{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", ".env"],
  "tasks": {
    "build": {
      "env": ["NODE_ENV", "DATABASE_URL", "NEXT_PUBLIC_*", "API_*"],
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "db:generate": {
      "env": ["DATABASE_URL"],
      "cache": false,
      "inputs": ["./src/schema/index.ts"],
      "outputs": ["./migrations"]
    },
    "db:migrate": {
      "env": ["DATABASE_URL"],
      "cache": false
    },
    "db:push": {
      "env": ["DATABASE_URL"],
      "cache": false
    },
    "db:studio": {
      "env": ["DATABASE_URL"],
      "cache": false,
      "persistent": true
    }
  }
}
